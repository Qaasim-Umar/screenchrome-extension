{
  "name": "HelpMeOut",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Records your screen ",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/logo.png",
      "32": "/assets/logo.png",
      "128": "/assets/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}